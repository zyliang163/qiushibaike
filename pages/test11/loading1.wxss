.loading{
            width: 350px;
            height: 50px;
            margin: 0 auto;
            margin-top:100px;
            border: 1px saddlebrown red;
        }
        .loading view{
            display: inline-block;
            width: 20px;
            height: 20px;
            margin-right: 5px;
            border-radius: 50%;
            background: gainsboro;
            -webkit-animation: load 1s ease-in-out infinite;
        }
        .loading view:last-child{
            margin-right: 0px; 
        }
        @keyframes load{
            0%{
                opacity: 1;
                -webkit-transform: scale(1.3);
            }
            100%{
                opacity: 0.2;
                -webkit-transform: scale(.3);
            }
        }
        .loading view:nth-child(1){
            -webkit-animation-delay:0.13s;
        }
        .loading view:nth-child(2){
            -webkit-animation-delay:0.26s;
        }
        .loading view:nth-child(3){
            -webkit-animation-delay:0.39s;
        }
        .loading view:nth-child(4){
            -webkit-animation-delay:0.52s;
        }
        .loading view:nth-child(5){
            -webkit-animation-delay:0.65s;
        }