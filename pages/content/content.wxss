/* pages/content/content.wxss */
.partl image:nth-child(2){
 padding-left: 12px;
}
.comment_new text{
    font-size: 14px;
    color: #ccc;
}
.comment_list{
    display: flex;
}
.uface{
    padding: 10px;
    padding-left: 0;
}
.uface image{
    width: 40px;
    border-radius: 50%;
}
.comment_content{
    /*等于width=100%  */
    flex: 1; 
}
.uname{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 25px;
    padding-top: 6px;
}
.uname text{
    font-size: 15px;
    color: #ccc;
}
.uname image{
    width: 25px;
    height: 25px;
    border-radius: 50%
}
.utext{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.utext text{
    font-size: 16px;
}
.uother{
    border-bottom: 1px solid #eee;
    padding-bottom: 5px;
}
.uother text{
    font-size: 12px;
    color: #ccc;
    padding-right: 10px;
}
.comment_area{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    display: flex;
    width: 100%;
    padding: 5px;
    align-items: center;
    border-top: 1px solid #ccc;
    background-color: #fffffe;
}
.comment_area image{
    width: 30px;
    height: 30px;
}
.comment_area input{
    flex: 1;
    margin:0 5px;
    font-size: 12px;
}
.pinput{
    font-size: 16px;
    color: #ccc;
}